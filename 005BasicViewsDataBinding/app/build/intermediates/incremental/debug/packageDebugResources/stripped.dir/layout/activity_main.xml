    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainActivity" android:tag="layout/activity_main_0" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

        <ToggleButton
            android:id="@+id/mainActivityToggleButtonOpen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textOn="@string/toggle_button_on_text"
            android:textOff="@string/toggle_button_off_text"
            android:checked="true"
            android:tag="binding_1"                                                                             />

        <LinearLayout
            android:id="@+id/mainActivityLayoutRegisterInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/mainActivityEditTextName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:tag="binding_2"                      
                android:hint="@string/edittext_name_hint_text" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:tag="binding_3"                       
                android:hint="@string/edittext_email_hint_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="binding_4"        
                                                              />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="binding_5"          
                                                               
                                                                                                                         />

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:tag="binding_6"         
                                                              
                                                                                                                        
                    />

            </LinearLayout>

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_7"              
                                                                       
                                                                                                                 />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="text"
                android:tag="binding_8"                          
                android:hint="@string/edittext_username_hint_text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="5"
                    android:tag="binding_9"                 
                                               
                    android:hint="@string/edittext_password_hint_text" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="2">

                    <Button
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                                             
                        android:tag="binding_10"                                                   
                                                                     
                                                                 />

                    <Switch
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/switch_show_button_enable"
                        android:tag="binding_11"                      
                        tools:ignore="UseSwitchCompatOrMaterialXml"
                                                                                                                                  />
                </LinearLayout>

            </LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword"
                android:tag="binding_12"          
                android:hint="@string/edittext_confirm_password_hint_text" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_13"   
                                                                                       
                android:text="@string/button_register_text" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_14"    
                android:text="@string/checkbox_accept_text" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_15"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tag="binding_16"                                            
                android:text="@string/button_clear_text" />

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="binding_17"                                            
            android:text="@string/button_close_text" />

    </LinearLayout>
         
